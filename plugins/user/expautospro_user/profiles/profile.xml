<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: EXP Autos Pro User !-->
<form>
    <fields name="expprofile">
        <fieldset name="expprofile"
		addfieldpath="/components/com_expautospro/models/fields"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_TEXT"
	>
        
            <field
			id="lastname"
			name="lastname"
			type="text"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_LASTNAME_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_LASTNAME_DESC"
			class="inputbox"
			size="30" />
            <field
			id="companyname"
			name="companyname"
			type="text"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_COMPANYNAME_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_COMPANYNAME_DESC"
			class="inputbox"
			size="30" />
            <field name="web"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_WEB_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_WEB_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="phone"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_PHONE_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_PHONE_DESC"
			default="" class="inputbox"
			size="15"
                        required="true"
		/>
            <field name="mobphone"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_MOBPHONE_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_MOBPHONE_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="fax"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_FAX_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_FAX_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="zipcode"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_ZIPCODE_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_ZIPCODE_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="userinfo" type="editor"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_OTHERINFO_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_OTHERINFO_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="true"
                        width="200"
			hide="readmore,pagebreak,article"
			 />
            <field name="logo"
			type="explogo"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_LOGO_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_LOGO_DESC"
			/>
            <field name="expphoto"
			type="expphoto"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_PHOTO_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_PHOTO_DESC"
			/>
            <field name="country" type="country"
                label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_COUNTRY_TEXT" 
                description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_COUNTRY_DESC" />
            <field name="expstate"  type="selectstate"
                label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_STATE_TEXT" 
                description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_STATE_DESC" />
            <field name="city"  type="cities"
                label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_CITY_TEXT" 
                description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_CITY_DESC" />
            <field name="street"
			type="inputbox"
			label="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_STREET_TEXT"
			description="COM_EXPAUTOSPRO_CP_EXPUSER_DEALERINFO_STREET_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="latitude"
			type="inputbox"
			label="COM_EXPAUTOSPRO_GOOGLEMAP_LATITUDE_TEXT"
			description="COM_EXPAUTOSPRO_GOOGLEMAP_LATITUDE_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="longitude"
			type="inputbox"
			label="COM_EXPAUTOSPRO_GOOGLEMAP_LONGITUDE_TEXT"
			description="COM_EXPAUTOSPRO_GOOGLEMAP_LONGITUDE_DESC"
			default="" class="inputbox"
			size="15"
		/>
            <field name="expgoogle"
			type="expgoogle"
			label="COM_EXPAUTOSPRO_CP_DETAILPAGE_GOOGLEMAP_TEXT"
			description="COM_EXPAUTOSPRO_CP_DETAILPAGE_GOOGLEMAP_DESC"
			/>
            <field name="emailstyle" type="list" default="1"
                        label="COM_EXPAUTOSPRO_USER_EMAILSTYLE_TEXT"
                        description="COM_EXPAUTOSPRO_USER_EMAILSTYLE_DESC"
                >
                <option value="0">COM_EXPAUTOSPRO_USER_EMAILSTYLE_TEXT_VAL</option>
                <option value="1">COM_EXPAUTOSPRO_USER_EMAILSTYLE_HTML_VAL</option>
            </field>
        
        </fieldset>
    </fields>
</form>
