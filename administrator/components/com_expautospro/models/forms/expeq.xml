<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: category.xml EXP Autos Pro Category !-->
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_expautospro/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
		<field name="catid" type="expdatabase"
			database="catequipment"
			label="JCATEGORY" description="COM_EXPAUTOSPRO_CATSELECT_DESC" required="true" />
		<field name="name" type="text" class="inputbox"
			size="40" label="COM_EXPAUTOSPRO_EQS_NAME_TEXT"
			description="COM_EXPAUTOSPRO_EQS_NAME_DESC" required="true" />
		<field name="image"
			type="media"
			directory=""
			size="40"
			hide_none="1"
			label="COM_EXPAUTOSPRO_IMAGE_TEXT"
			description="COM_EXPAUTOSPRO_IMAGE_TEXT_DESC"
			/>
		<field name="state" type="list"
			label="JGLOBAL_STATE" description="JFIELD_PUBLISHED_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="ordering"
			type="ordering"
			class="inputbox"
			database="equipment"
			wherefield="catid"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
		/>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_EXPAUTOSPRO_LANGUAGE_DESC" class="inputbox"
		>
			<option value="*">JALL</option>
		</field>
	</fieldset>
</form>
