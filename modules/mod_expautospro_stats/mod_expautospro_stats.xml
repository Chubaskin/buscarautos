<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
    <!-- Name of the Module -->
    <name>MOD_EXPAUTOSPRO_STATS</name> 
 
    <!-- Name of the Author -->
    <author>Alexey Kurguz (Grusha)</author> 
 
    <!-- Version Date of the Module -->
    <creationDate>2010-08-24</creationDate> 
 
    <!-- Copyright information -->
    <copyright>All rights reserved by EXP Team 2006 - 2011.</copyright> 
 
    <!-- License Information -->
    <license>Commercial</license> 
 
    <!-- Author's email address -->
    <authorEmail>info@feellove.eu</authorEmail> 
 
    <!-- Author's website -->
    <authorUrl>www.feellove.eu</authorUrl> 
 
    <!-- Module version number -->
    <version>1.0.0</version> 
 
    <!-- Description of what the module does -->
    <description>MOD_EXPAUTOSPRO_STATS_XML_DESCRIPTION</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
    <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
        <filename module="mod_expautospro_stats">mod_expautospro_stats.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>css</folder>
        <folder>images</folder>
    </files>
 
	<languages>
		<language tag="en-GB">en-GB.mod_expautospro_stats.ini</language>
		<language tag="en-GB">en-GB.mod_expautospro_stats.sys.ini</language>
	</languages>
 
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field	
                        name="showtotal"
                        type="list"
			default="1"
                        label="MOD_EXPAUTOSPRO_STATS_SHOW_TOTAL_TEXT"
                        description="MOD_EXPAUTOSPRO_STATS_SHOW_TOTAL_DESC" >

                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>